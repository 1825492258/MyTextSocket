<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".text.SlidingTabActivity">

    <com.flyco.tablayout.SlidingTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tl_7"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        tl:tl_indicator_color="#d60b0b"
        tl:tl_indicator_corner_radius="1.5dp"
        tl:tl_indicator_height="3dp"
        tl:tl_indicator_width="10dp"
        tl:tl_tab_padding="6dp"
        tl:tl_textSelectColor="#000"
        tl:tl_textUnselectColor="#555" />

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="124dp" />

    <com.flyco.tablayout.SegmentTabLayout xmlns:tl="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tl_1"
        android:layout_width="198dp"
        android:layout_height="36dp"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        tl:tl_bar_color="#ffffff"
        tl:tl_indicator_anim_enable="false"
        tl:tl_indicator_color="#F6CE59"
        tl:tl_textBold="SELECT"/>
</LinearLayout>